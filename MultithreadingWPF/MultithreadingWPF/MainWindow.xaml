<Window x:Class="MultithreadingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultithreadingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="81*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lstEven" FontSize="18" BorderBrush="Red" BorderThickness="2" Margin="20 80"/>
        <ListBox x:Name="lstOdd" FontSize="18" Grid.Column="1" BorderBrush="Red" BorderThickness="2" Margin="20 80"/>
        <Button x:Name="btnOdd" Content="Odd Numbers" HorizontalAlignment="Center" Margin="0,18,0,0" VerticalAlignment="Top" Height="34" Width="126" Grid.Column="1" Click="btnOdd_Click"/>
        <Button Name="btnEven" Content="Even Numbers" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" Height="34" Width="126" Click="btnEven_Click"/>

    </Grid>
</Window>
